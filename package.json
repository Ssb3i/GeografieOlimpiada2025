{
  "name": "earthquake-preparedness-game",
  "version": "1.0.0",
  "description": "An interactive educational game teaching earthquake preparedness through three phases: before, during, and after an earthquake. Built with vanilla HTML5, CSS3, and JavaScript.",
  "main": "src/index.html",
  "scripts": {
    "start": "live-server src --port=3000 --open=/",
    "dev": "live-server src --port=3000 --open=/ --watch=src",
    "build": "echo 'Static build - copy src/ contents to production server'",
    "test": "echo 'No tests specified yet'",
    "validate": "echo 'Validating HTML, CSS, and JS files...'",
    "serve": "python3 -m http.server 3000 --directory src",
    "lint": "echo 'No linting configured yet'"
  },
  "devDependencies": {
    "live-server": "^1.2.2"
  },
  "keywords": [
    "earthquake",
    "preparedness",
    "education",
    "game",
    "safety",
    "emergency",
    "disaster-preparedness",
    "interactive",
    "learning",
    "javascript",
    "html5",
    "css3"
  ],
  "author": "Earthquake Preparedness Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/earthquake-preparedness-game.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/earthquake-preparedness-game/issues"
  },
  "homepage": "https://your-username.github.io/earthquake-preparedness-game/",
  "engines": {
    "node": ">=14.0.0"
  },
  "browserslist": [
    "last 2 versions",
    "> 1%",
    "not dead"
  ]
